@model Edukator.EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yetenek Güncelleme Sayfası</h6>
        <form method="post">
            <input type="hidden" asp-for="SkillID" />
            <div class="mb-3">
                <label for="Talent" class="form-label">Yetenek</label>
                <input type="text" class="form-control" id="Talent" asp-for="Talent" />
            </div>
            <div class="mb-3">
                <label for="Value" class="form-label">Yetenek Değeri</label>
                <input type="text" class="form-control" id="Value" asp-for="Value" />
            </div>
            
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>

