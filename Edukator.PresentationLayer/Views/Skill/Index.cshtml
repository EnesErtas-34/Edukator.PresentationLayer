@model List<Edukator.EntityLayer.Concrete.Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yeteneklerimiz</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Yetenek</th>
                    <th scope="col">Değer</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.SkillID</th>
                        <td>@item.Talent</td>
                        <td>@item.Value </td>
                        <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-success">Güncelle</a></td>


                    </tr>
                }

            </tbody>
        </table>
        <a href="/Skill/AddSkill/" class="btn btn-outline-primary">Yeni Yetenek Girişi</a>
    </div>
</div>

