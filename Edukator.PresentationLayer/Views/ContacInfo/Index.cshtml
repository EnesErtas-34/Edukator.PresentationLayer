@model List<Edukator.EntityLayer.Concrete.ContactInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">İletişim</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Adres1</th>
                    <th scope="col">Adres2</th>
                    <th scope="col">Mail1</th>
                    <th scope="col">Mail2</th>
                    <th scope="col">Telefon1</th>
                    <th scope="col">Telefon2</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ContactInfoID</th>
                        <td>@item.Address1</td>
                        <td>@item.Address2 </td>
                        <td>@item.Mail1 </td>
                        <td>@item.Mail2 </td>
                        <td>@item.Phone1</td>
                        <td>@item.Phone2 </td>
                        <td><a href="/ContacInfo/DeleteContactInfo/@item.ContactInfoID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/ContacInfo/UpdateContactInfo/@item.ContactInfoID" class="btn btn-outline-success">Güncelle</a></td>


                    </tr>
                }

            </tbody>
        </table>
        <a href="/ContacInfo/AddContactInfo/" class="btn btn-outline-primary">Yeni İletişim Bilgileri Girişi</a>
    </div>
</div>

