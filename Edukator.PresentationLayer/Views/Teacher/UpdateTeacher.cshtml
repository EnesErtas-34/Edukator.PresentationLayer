@model Edukator.EntityLayer.Concrete.Teacher
@{
    ViewData["Title"] = "UpdateTeacher";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4"> Sosyal Medya Güncelleme Sayfası</h6>
        <form method="post">
            <input type="hidden" asp-for="TeacherID" />
            <div class="mb-3">
                <label for="NameSurname" class="form-label">Sosyal Medya Başlığı</label>
                <input type="text" class="form-control" id="NameSurname" asp-for="NameSurname" />
            </div>
            <div class="mb-3">
                <label for="Title" class="form-label">Sosyal Medya İkonu</label>
                <input type="text" class="form-control" id="Title" asp-for="Title" />
            </div>
            <div class="mb-3">
                <label for="ImageURL" class="form-label">Sosyal Medya URL</label>
                <input type="text" class="form-control" id="ImageURL" asp-for="ImageURL" />
            </div>
            <div class="mb-3">
                <label for="Facebook" class="form-label">Sosyal Medya URL</label>
                <input type="text" class="form-control" id="Facebook" asp-for="Facebook" />
            </div>
            <div class="mb-3">
                <label for="Twitter" class="form-label">Sosyal Medya URL</label>
                <input type="text" class="form-control" id="Twitter" asp-for="Twitter" />
            </div>
            <div class="mb-3">
                <label for="Linkedin" class="form-label">Sosyal Medya URL</label>
                <input type="text" class="form-control" id="Linkedin" asp-for="Linkedin" />
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>
