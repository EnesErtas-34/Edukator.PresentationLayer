@model List<Edukator.EntityLayer.Concrete.Teacher>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Eğitmenlerimiz</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ad Soyad</th>
                    <th scope="col">Unvan</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.TeacherID</th>
                        <td>@item.NameSurname</td>
                        <td>@item.Title </td>
                        <td><a href="/Teacher/DeleteTeacher/@item.TeacherID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Teacher/UpdateTeacher/@item.TeacherID" class="btn btn-outline-success">Güncelle</a></td>
                   

                    </tr>
                }

            </tbody>
        </table>
        <a href="/Teacher/AddTeacher/" class="btn btn-outline-primary">Yeni Eğitmen Girişi</a>
    </div>
</div>


